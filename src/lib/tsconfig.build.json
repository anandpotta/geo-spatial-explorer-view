
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@angular",
      "./node_modules/@types",
      "./node_modules/@angular",
      "./angular-stubs"
    ],
    "baseUrl": ".",
    "paths": {
      "@angular/core": [
        "./angular-stubs/core"
      ],
      "@angular/common": [
        "./angular-stubs/common"
      ]
    },
    "resolveJsonModule": true,
    "allowUnreachableCode": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "**/*",
    "angular-stubs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
