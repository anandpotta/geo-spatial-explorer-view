
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmitOnError": false,
    "typeRoots": ["../../node_modules/@types", "../../src/types"]
  },
  "include": [
    "../../src/lib/**/*",
    "../../src/types/**/*",
    "../../src/vite-env.d.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "../../node_modules",
    "./**/*.test.*",
    "./**/*.spec.*",
    "../../src/**/*.test.*",
    "../../src/**/*.spec.*",
    "./build.js",
    "../../src/components/**/*",
    "../../src/hooks/**/*",
    "../../src/utils/**/*",
    "../../src/services/**/*",
    "../../src/contexts/**/*",
    "../../src/pages/**/*"
  ]
}
